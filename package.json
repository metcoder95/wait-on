{
  "name": "@metcoder95/wait-on",
  "description": "wait-on is a cross platform command line utility and Node.js API which will wait for files, ports, sockets, and http(s) resources to become available",
  "version": "0.4.0",
  "main": "index.js",
  "types": "index.d.ts",
  "bin": {
    "wait-on": "./wait-on"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "author": "Jeff Barczewski <info@codewinds.com>",
  "contributors": [
    {
      "name": "Carlos Fuentes",
      "email": "me@metcoder.dev",
      "url": "https://metcoder.dev"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/metcoder95/wait-on.git"
  },
  "bugs": {
    "url": "https://github.com/metcoder95/wait-on/issues"
  },
  "license": "MIT",
  "scripts": {
    "test": "tap --cov test/**/*.test.js && npm run test:ts && npm run lint",
    "test:ci": "tap --cov test/**/*.test.js && npm run test:ts && npm run lint:ci",
    "test:only": "tap --only",
    "test:unit": "tap test/**/*.test.js",
    "test:ts": "tsd",
    "lint": "standard | snazzy",
    "lint:ci": "standard",
    "release": "npx standard-version"
  },
  "engines": {
    "node": ">=16.x"
  },
  "tsd": {
    "directory": "test"
  },
  "tap": {
    "check-coverage": false
  },
  "standard": {
    "ignore": [
      "*.d.ts",
      "*.test-d.ts"
    ]
  },
  "devDependencies": {
    "@types/node": "^20.1.0",
    "expect-legacy": "^1.20.2",
    "husky": "^8.0.1",
    "mkdirp": "^3.0.0",
    "mocha": "^9.2.0",
    "snazzy": "^9.0.0",
    "standard": "^17.0.0",
    "tap": "^16.3.0",
    "temp": "^0.9.4",
    "tsd": "^0.28.1",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@metcoder95/tiny-pool": "^1.0.0",
    "ajv": "^8.11.0",
    "minimist": "^1.2.7",
    "ora": "^6.1.2",
    "signale": "^1.4.0",
    "undici": "^5.12.0"
  },
  "keywords": [
    "wait",
    "delay",
    "cli",
    "files",
    "tcp",
    "ports",
    "sockets",
    "http",
    "exist",
    "ready",
    "available",
    "portable",
    "cross-platform",
    "unix",
    "linux",
    "windows",
    "win32",
    "osx",
    "fork"
  ]
}
